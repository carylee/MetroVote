!!! 5
%html
  %head
    %title MetroVote
    = stylesheet_link_tag "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css"
    = stylesheet_link_tag :all
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"
    = javascript_include_tag "bootstrap-dropdown.js"
    = javascript_include_tag "bootstrap-tabs.js"
    = javascript_include_tag "unicorn.js"
    = csrf_meta_tag
  %body
    .topbar
      .topbar-inner
        .container
          %a.brand{:href => '/'} MetroVote
          %ul.nav
            - unless @positions.nil?
              %li.dropdown{:data => {:dropdown =>"dropdown"}}
                %a.dropdown-toggle{:href => '#'} Seattle City Council
                %ul.dropdown-menu
                  - @positions.each do |position|
                    %li
                      %a{:href => '/positions/' + position.id.to_s}= position.title
    .container
      .content
        = yield
